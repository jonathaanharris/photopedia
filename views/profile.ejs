<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/other.css"></link>
</head>
<body>
  <%- include('./partial/navbar') %>
<div class="container text-center my-5" style="width: 50vh">
  <% if (data.Profile) { %>
  <div class="card">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"> Username: <%= data.username %></li>
      <li class="list-group-item"> Name: <%= data.Profile.firstName %> <%= data.Profile.lastName %></li>
      <li class="list-group-item">Age : <%= data.Profile.age() %></li>
    </ul>
    <a class="btn" href="/profile/<%= data.id %>/form">Edit Profile</a>
  </div>
    <% } else { %>
    <div class="card">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"> Username: <%= data.username %></li>
        <li class="list-group-item"> Name: --- </li>
        <li class="list-group-item">Age : --- </li>
      </ul>
      <a href="/profile/<%= data.id %>/form"><button>Edit Profile</button></a>
    </div>
  <% } %>
  <br>
  <h5><%=data.username%>'s post</h5>
  <ul class="list-group"></ul>
  <% data.Posts.forEach(el => { %>
    
      <li class="list-group-item"><a href="/post/<%= el.id %>"><%= el.title %></a></li>

        
  <% }) %>
</ul>
</div>
</body>
</html>