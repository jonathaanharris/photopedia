<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <%- include('./partial/navbar') %>

  <% if (!data) { %>

    <form action="/profile/currentUser/add" method="post">
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input id="firstName" type="text" name="firstName" class="form-control" placeholder="first name">
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input id="lastName" type="text" name="lastName" class="form-control" placeholder="last name">
      </div>
      <div class="form-group">
        <label for="dateOfBirth">Date of Birth</label>
        <input id="dateOfBirth" type="date" name="dateOfBirth" class="form-control">
      </div>
      <% if(error) { %>
        <p style="color: red"><%= error %></p>
      <% } %>
      <button type="submit" class="btn btn-primary">Submit</button>
      </form>

  <% } else { %>

    <form action="/profile/currentUser/edit" method="post">
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input id="firstName" type="text" name="firstName" value="<%= data.firstName %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input id="lastName" type="text" name="lastName" value="<%= data.lastName %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="dateOfBirth">Date of Birth</label>
        <input id="dateOfBirth" type="date" name="dateOfBirth" value="<%= data.convertDate %>" class="form-control">
      </div>
      <% if(error) { %>
        <p style="color: red"><%= error %></p>
      <% } %>
      <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      
  <% } %>
</body>
</html>